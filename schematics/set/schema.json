{
  "$schema": "http://json-schema.org/schema",
  "id": "SetSchema",
  "title": "Set Component Generator",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Nombre base para el conjunto de componentes"
    },
    "path": {
      "type": "string",
      "description": "Ruta base donde crear los componentes",
      "default": "src/app/views"
    }
  },
  "required": ["name"]
}